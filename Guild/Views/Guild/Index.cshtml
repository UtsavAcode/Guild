<h1>Hello and welcome to the GUILD System 🙇.</h1>

@model List<Guild.Models.Domain.Worker>

<div class="text-center">
    <h4 class="display-4">This is just a landing page (><)</h4>

    <h3>This is the list of users.</h3>
    <div class="container">
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Age</th>
                        <th>Password</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var worker in Model)
                        {
                            <tr>
                                <td>@worker.Name</td>
                                <td>@worker.Email</td>
                                <td>@worker.Phone</td>
                                <td>@worker.Age</td>
                                <td>@worker.Password</td>
                                <td><a class="btn btn-Primary" asp-controller="Register" asp-action="Edit" asp-route-id="@worker.Id">Update</a></td>
                                <td><a class="btn btn-Danger" asp-action="" asp-controller="Register">Delete</a></td>
                            </tr>
                        }

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
